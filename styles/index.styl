  background-color: #6633FF !important

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active
  border-bottom: 2px solid #6633FF

p
  line-height: 1.8rem !important

.intro-body 
  margin-top: 25px;

